<html>

<body>
    <div
        style="width: 1200px;margin: 0 auto; border: 1px solid blue;background-color: yellow;color: blue;font-size: 24px;">
        <h3><a href="/">Home</a></h3>
        <h1>List of reviews</h1>
        <table align="center" border="1" cellspacing="5">
            <tr>

                <td>SrNo</td>
                <td>Username</td>
                <td>Email</td>
                <td>Date</td>
                <td>Review</td>
                <td>Action</td>
            </tr>
            <% for(let i=0; i < result.length; i++) { %>
                <tr>
                    <td>
                        <%= result[i].srNo %>
                    </td>
                    <td>
                        <%= result[i].uname %>
                    </td>
                    <td>
                        <%= result[i].mail %>
                    </td>
                    <td>
                        <%= result[i].date.toLocaleDateString('en-GB') %>
                    </td>
                    <td>
                        <%= result[i].review %>
                    </td>
                    <td><a href="/editreview?id=<%= result[i].srNo %>">Edit</a>&nbsp;--
                        <a href="/delreview?id=<%= result[i].srNo %>">Delete</a>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</body>

</html>